@model Transact_Mvc.Models.DepositSuccessViewModel
@{
    ViewData["Title"] = "Deposit Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="successMessage">Deposit Successful!</h1>

@if (Model != null)
{
    <p>Success message: @Model.SuccessMessage</p>
}
else
{
    <p>Error: Model is null.</p>
}
<style>
    .successMessage {
        color: green;
    }
</style>

<p class="successMessage">Your deposit has been successfully processed.</p>
<p>Any additional information or success message can be displayed here.</p>
<p>Go back to your cabinet: <a href="~/Identity/Account/Manage">User Cabinet</a></p>
